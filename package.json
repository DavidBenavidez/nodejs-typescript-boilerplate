{
  "name": "express-typescript-solid-boilerplate",
  "version": "1.0.0",
  "description": "Express x Typescript boilerplate utilizing SOLID principles",
  "main": "dist/main.js",
  "scripts": {
    "start": "nodemon dist/index.js",
    "build": "rm -rf dist && gulp",
    "db:migrate": "cd ./src; sequelize db:migrate; cd ..",
    "db:clear": "cd ./src; sequelize db:migrate:undo:all; cd ..",
    "db:status": "cd ./src; sequelize db:migrate:status; cd ..",
    "local:compose:up": "docker-compose --file ./docker-compose.yml up --build --remove-orphans;",
    "local:compose:stop": "docker-compose --file ./docker-compose.yml stop",
    "local:compose:start": "docker-compose --file ./docker-compose.yml start",
    "local:compose:down": "docker-compose --file ./docker-compose.yml down -v"
  },
  "author": "David Ralph Benavidez",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^15.12.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "typeorm": "^0.2.34"
  },
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "nodemon": "^2.0.7",
    "typescript": "^4.3.4"
  }
}
